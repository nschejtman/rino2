# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                      controllers.Application.index()

# Admin
GET           /admin                 controllers.Admin.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file          controllers.Assets.at(path="/public", file)

# Players
POST          /api/player            controllers.PlayerAPI.post()
GET           /api/player/:id        controllers.PlayerAPI.get(id : Long)
DELETE        /api/player/:id        controllers.PlayerAPI.delete(id: Long)
PUT           /api/player/:id        controllers.PlayerAPI.put(id: Long)

# Teams
POST          /api/team/             controllers.TeamAPI.post()
GET           /api/team/:id          controllers.TeamAPI.get(id : Long)
DELETE        /api/team/:id          controllers.TeamAPI.delete(id: Long)
PUT           /api/team/:id          controllers.TeamAPI.put(id: Long)

# Categories
POST          /api/category/             controllers.CategoryAPI.post()
GET           /api/category/:id          controllers.CategoryAPI.get(id : Long)
DELETE        /api/category/:id          controllers.CategoryAPI.delete(id: Long)
PUT           /api/category/:id          controllers.CategoryAPI.put(id: Long)

# Tournaments
POST          /api/tournament/             controllers.TournamentAPI.post()
GET           /api/tournament/:id          controllers.TournamentAPI.get(id : Long)
DELETE        /api/tournament/:id          controllers.TournamentAPI.delete(id: Long)
PUT           /api/tournament/:id          controllers.TournamentAPI.put(id: Long)